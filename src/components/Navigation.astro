<!-- Mobile menu button -->
<div class="fixed top-0 left-0 z-20 p-4 md:hidden">
  <button id="mobile-menu-button" class="text-gray-800 hover:text-gray-600 focus:outline-none">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
</div>

<script>
  // Function to handle mobile menu
  function initMobileMenu() {
    const sidebar = document.getElementById('sidebar');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    
    // Mobile menu toggle
    if (mobileMenuButton && sidebar) {
      mobileMenuButton.addEventListener('click', () => {
        sidebar.classList.toggle('-translate-x-full');
      });
    }

    // Hide menu by default on mobile
    if (window.innerWidth < 768 && sidebar) {
      sidebar.classList.add('-translate-x-full');
    }
  }

  // Initialize mobile menu on page load
  document.addEventListener('DOMContentLoaded', initMobileMenu);
  
  // Re-initialize mobile menu after page transitions
  document.addEventListener('astro:page-load', initMobileMenu);
  
  // Also initialize immediately when script runs to handle view transitions
  initMobileMenu();
</script>

<style>
  @media (max-width: 768px) {
    nav {
      transition: transform 0.3s ease-in-out;
    }
  }
</style>
