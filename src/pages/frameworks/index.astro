---
import Layout from '../../layouts/Layout.astro';
import FrameworkCard from '../../components/FrameworkCard.astro';
import { supabase } from '../../lib/supabase';

export const prerender = false;

// Get all frameworks with their library counts
const { data: frameworks } = await supabase
  .from('frameworks')
  .select(`
    *,
    libraries:library_frameworks(count)
  `)
  .order('name');

// Process frameworks to get library count
const processedFrameworks = frameworks?.map(framework => ({
  ...framework,
  libraryCount: framework.libraries?.length || 0
})) || [];
---

<Layout title="JavaScript Frameworks - UIriver">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">JavaScript Frameworks</h1>
      <p class="text-gray-600">
        Explore UI libraries for popular JavaScript frameworks.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {processedFrameworks.map(framework => (
        <FrameworkCard framework={framework} />
      ))}
    </div>

    {(!processedFrameworks || processedFrameworks.length === 0) && (
      <div class="text-center py-12">
        <p class="text-gray-500">No frameworks found.</p>
      </div>
    )}
  </main>
</Layout>
