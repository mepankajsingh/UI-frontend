---
import Layout from '../../layouts/Layout.astro';
import LibraryCard from '../../components/LibraryCard.astro';
import { supa<boltAction type="file" filePath="src/pages/frameworks/[slug].astro">base } from '../../lib/supabase';

export const prerender = false;

const { slug } = Astro.params;

// Get framework details
const { data: framework } = await supabase
  .from('frameworks')
  .select('*')
  .eq('slug', slug)
  .single();

// If framework not found, return 404
if (!framework) {
  return Astro.redirect('/404');
}

// Get libraries for this framework
const { data: libraries } = await supabase
  .from('libraries')
  .select(`
    *,
    frameworks:library_frameworks(
      is_primary,
      framework_id(id, name, slug)
    ),
    tags:library_tags(tag_id(id, name, slug)),
    labels:library_labels(
      label_id(id, name, color, text_color)
    )
  `)
  .eq('library_frameworks.framework_id.slug', slug)
  .order('github_stars', { ascending: false });

// Get primary libraries (where this framework is the primary one)
const primaryLibraries = libraries?.filter(lib => 
  lib.frameworks.some(fw => fw.is_primary && fw.framework_id.slug === slug)
) || [];

// Get secondary libraries (where this framework is not the primary one)
const secondaryLibraries = libraries?.filter(lib => 
  !lib.frameworks.some(fw => fw.is_primary && fw.framework_id.slug === slug)
) || [];

// Combine with primary libraries first
const sortedLibraries = [...primaryLibraries, ...secondaryLibraries];

const imageUrl = framework.icon_url || framework.logo_url || '/favicon.svg';
---

<Layout title={`${framework.name} UI Libraries - UIriver`}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="mb-8 flex items-start">
      <div class="w-16 h-16 flex items-center justify-center mr-4">
        <img 
          src={imageUrl} 
          alt={`${framework.name} logo`} 
          class="max-w-full max-h-full object-contain"
          onerror="this.onerror=null; this.src='/favicon.svg';"
        />
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">{framework.name} UI Libraries</h1>
        <p class="text-gray-600">
          {framework.description || `Discover the best UI libraries for ${framework.name}.`}
        </p>
      </div>
    </div>

    {sortedLibraries.length > 0 ? (
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {sortedLibraries.map(library => (
          <LibraryCard library={library} />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500">No libraries found for {framework.name}.</p>
      </div>
    )}
  </main>
</Layout>
